class Product:
    def __init__(self, name, price, in_stock=True):
        self.name = name
        self.price = price
        self.in_stock = in_stock

class Cart:
    def __init__(self):
        self.items = []

    def add_product(self, product):
        if product.in_stock:
            self.items.append(product)

    def remove_product(self, product_name):
        self.items = [p for p in self.items if p.name != product_name]

    def total_price(self):
        return sum(p.price for p in self.items)

    def show_cart(self):
        for p in self.items:
            print(f"{p.name} - {p.price} грн")
        print(f"Загальна вартість: {self.total_price()} грн")
p1 = Product("Ноутбук", 20000)
p2 = Product("Мишка", 500)
p3 = Product("Клавіатура", 1000, in_stock=False)

cart = Cart()
cart.add_product(p1)
cart.add_product(p2)
cart.add_product(p3)  # не додасть, бо немає в наявності

cart.show_cart()
