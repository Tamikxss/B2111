class Employee:
    def __init__(self, name, position, salary):
        self.name = name
        self.position = position
        self.salary = salary

    def get_salary_info(self):
        return f"Salary of {self.name}: {self.salary}"
 
worker = Employee("Oleg", "Manager", 15000) 
 
print(worker.get_salary_info())
